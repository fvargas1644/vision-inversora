{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // En true por defecto
    "noEmitOnError": false, // Permite emitir archivos incluso si hay errores (No esta por defecto)
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/analisis/ticker/sidebar/valuation-per/chart.jsx", "src/components/analisis/ticker/sidebar/valuation-per/chartjtsx"],
  "exclude": ["node_modules"]
}
